{
  "manifest_version": 3,
  "name": "Contador de Cliques",
  "version": "1.0.0",
  "description": "Extensão que conta quantos cliques foram feitos no botão do popup.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Contador de Cliques"
  },
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "permissions": ["storage"],
  "host_permissions": []
}
